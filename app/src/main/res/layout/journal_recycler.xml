<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardJournal"
        android:layout_width="match_parent"
        app:cardCornerRadius="18dp"
        android:layout_marginHorizontal="5dp"
        app:cardElevation="5dp"
        android:layout_marginVertical="8dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/journal_backgroung_recycler">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/journal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/journal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/icon"
                android:fontFamily="@font/handlee"
                android:text="Journal Title"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_marginEnd="20dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021/12/30"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_below="@id/journal_title"
                android:layout_toRightOf="@id/icon"
                android:fontFamily="@font/handlee"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 PM"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_below="@id/journal_title"
                android:layout_toRightOf="@id/date"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/handlee"
                android:layout_marginTop="6dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>